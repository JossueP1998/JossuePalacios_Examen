<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JossuePalacios_Examen.MainPage">

    <StackLayout>
        <Image Source="logo.png" BackgroundColor="Black"></Image>
        <Frame BackgroundColor="Gray" Padding="24" CornerRadius="0">
            <Label Text="Login" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="txtUser" Placeholder="Ingrese su usuario"></Entry>
        <Entry x:Name="txtPass" Placeholder="Ingrese su contraseña" IsPassword="True"></Entry>
        <Label Text="" x:Name="lblResultado" TextColor="Red"></Label>

        <Button x:Name="btnAbrir"
                Text="Login"
                Clicked="btnAbrir_Clicked"></Button>
    </StackLayout>

</ContentPage>
